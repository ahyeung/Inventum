<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/titleNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/inventumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:layout_marginRight="64pt"
                android:text="Inventum"
                android:textAlignment="viewStart"
                android:textColor="@color/inventum"
                android:textSize="34sp"
                android:textStyle="italic" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/topTracksNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/topTracksTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="50pt"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:text="Top Tracks"
                android:textSize="24sp"
                android:textColor="@color/inventum"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tracksView"
                android:layout_marginTop="75pt"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:layout_marginRight="@android:dimen/app_icon_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >



            </androidx.recyclerview.widget.RecyclerView>


        </FrameLayout>





    </FrameLayout>

</FrameLayout>